<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="rootPane"
      fx:controller="com.github.tjanu.dissonant.gui.PlaylistManager"
      prefHeight="400.0" prefWidth="600.0">
    <ComboBox fx:id="playlistChooser"/>
    <HBox>
    <ListView fx:id="nameList" />
    <VBox>
        <Button fx:id="add" text="+"/>
        <Button fx:id="up" text="↑"/>
        <Button fx:id="down" text="↓"/>
    </VBox>
    <GridPane HBox.hgrow="ALWAYS" hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER"/>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="NEVER"/>
        </columnConstraints>
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="RIGHT" text="Name:"/>
        <TextField fx:id="name" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0"/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="RIGHT" text="URL:"/>
        <TextField fx:id="url" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button fx:id="urlChooser" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    </GridPane>
    </HBox>
</VBox>
